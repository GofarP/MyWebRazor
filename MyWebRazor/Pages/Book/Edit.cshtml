@page
@model MyWebRazor.Pages.Book.EditModel
@{
	ViewData["Title"] = "Edit Book";
}

<div class="card shadow">
	<div class="card-header">
		<h3>@ViewData["Title"]</h3>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-6">
				<form method="post">
					<input type="hidden" asp-for="Books.id" />
					<div class="form-group">
						<label asp-for="Books.BookTitle" class="control-label"></label>
						<input asp-for="Books.BookTitle" class="form-control" />
						<span asp-validation-for="Books.BookTitle" class="text-danger"></span>

					</div>

					<div class="form-group">
						<label asp-for="Books.BookDescription" class="control-label"></label>
						<input asp-for="Books.BookDescription" class="form-control" />
						<span asp-validation-for="Books.BookDescription" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Books.Author" class="control-label"></label>
						<input asp-for="Books.Author" class="form-control" />
						<span asp-validation-for="Books.Author" class="text-danger"></span>
					</div>
					<div class="form-group mt-2">
						<button type="submit" class="btn btn-warning">Update</button>
						<a asp-page="Index" class="btn btn-primary">Back To List</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
