@page
@model MyWebRazor.Pages.Book.CreateModel
@{
	ViewData["Title"] = "Create New Book";
}

<div class="card shadow">
	<div class="card-header">
		<h3>@ViewData["Title"]</h3>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-6">
				<form  method="post">
					<div class="form-group">
						<label asp-for="Book.BookTitle" class="control-label"></label>
						<input asp-for="Book.BookTitle" class="form-control" />
						<span asp-validation-for="Book.BookTitle" class="text-danger"></span>
						
					</div>

					<div class="form-group">
						<label asp-for="Book.BookDescription" class="control-label"></label>
							<input asp-for="Book.BookDescription" class="form-control" />
							<span asp-validation-for="Book.BookDescription" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Book.Author" class="control-label"></label>
						<input asp-for="Book.Author" class="form-control" />
						<span asp-validation-for="Book.Author" class="text-danger"></span>
					</div>
					<div class="form-group mt-2">
						<button type="submit"class="btn btn-success">Save</button>
						<a asp-page="Index" class="btn btn-primary">Back To List</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
